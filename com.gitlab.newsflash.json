{
    "app-id" : "com.gitlab.newsflash",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "com.gitlab.newsflash",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=xdg-download"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/newsflash/cargo",
            "PASSWORD_CRYPT_KEY" : "@PASSWORD_CRYPT_KEY@"
        }
    },
    "modules" : [
        {
            "name" : "newsflash",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.com/news-flash/news_flash_gtk/-/raw/stable/dist/newsflash-2.0.0.tar.xz",
                    "sha256": "a2d7bed681fd562f4a4d8784387e32219042228cf569045656260810dec18e26"
                }
            ]
        }
    ]
}
